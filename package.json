{
    "name": "mdb-theme-fse",
    "description": "Development Scripts",
    "config" : {
        "SASS_SRC": "./assets/src/css",
        "SASS_BLD": "./assets/build/css"
    },
    "scripts": {
        "sass-blocks-dev": "sass --watch --update --style=expanded assets/src/css/blocks:assets/build/css/blocks",
        "sass-blocks": "sass --watch --style=compressed --no-source-map assets/src/css/blocks:assets/build/css/blocks",
        "sass-frontend-dev": "sass --watch --update --style=expanded assets/src/css/frontend/frontend.scss:assets/build/css/frontend.css",
        "sass-frontend": "sass --style=compressed --no-source-map assets/src/css/frontend/frontend.scss:assets/build/css/frontend.css"
    },
    "devDependecies": {
        "sass": "^1.59.3"
    }
}
