{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Base / 0",
                    "slug": "base-0",
                    "color": "hsl(240, 12.2%, 8%);"
                },
                {
                    "name": "Base / 1",
                    "slug": "base-1",
                    "color": "hsl(231.4,13.7%,15%)"
                },
                {
                    "name": "Base / 2",
                    "slug": "base-2",
                    "color": "#353744"
                },
                {
                    "name": "Base / 3",
                    "slug": "base-3",
                    "color": "#393C49"
                },
                {
                    "name": "Base / 4",
                    "slug": "base-4",
                    "color": "#3D404E"
                },
                {
                    "name": "Base / 5",
                    "slug": "base-5",
                    "color": "#424553"
                },
                {
                    "name": "Denim / 0",
                    "slug": "denim-0",
                    "color": "hsl(202,82%,35%)"
                },
                {
                    "name": "Denim / 1",
                    "slug": "denim-1",
                    "color": "hsl(202,82%,22%)"
                },
                {
                    "name": "Denim / 2",
                    "slug": "denim-2",
                    "color": "hsl(202,82%,85%)"
                },
                {
                    "name": "Contrast / 0",
                    "slug": "contrast-0",
                    "color": "hsl(221.3,7%,45.1%)"
                },
                {
                    "name": "Contrast / 1",
                    "slug": "contrast-1",
                    "color": "hsl(223,7%,80%)"
                },
                {
                    "name": "Contrast / 2",
                    "slug": "contrast-2",
                    "color": "hsl(223.6,7.2%,30%)"
                },
                {
                    "name": "Contrast / 3",
                    "slug": "contrast-3",
                     "color": "hsl(225, 7.8%, 55%)"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                }
            ],
            "gradients": [
                {
                    "name": "Base / 1 (top) to Base / 0 (bottom)",
                    "slug": "base-1-top-to-base-0-bottom",
                    "gradient": "linear-gradient(to bottom, var(--wp--preset--color--base-1), var(--wp--preset--color--base-0))"
                }
            ],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "defaultDuotone": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1000px",
            "wideSize": "1600px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "blockGap": true,
            "spacingScale": {
                "steps": 1
            },
            "defaultSpacingSizes": false,
            "spacingSizes": [
                {
                    "size": "clamp(1.5rem, 5vw, 2rem)",
                    "slug": "30",
                    "name": "30"
                },
                {
                    "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
                    "slug": "40",
                    "name": "40"
                },
                {
                    "size": "clamp(2.5rem, 8vw, 4.5rem)",
                    "slug": "50",
                    "name": "50"
                },
                {
                    "size": "clamp(3.75rem, 10vw, 7rem)",
                    "slug": "60",
                    "name": "60"
                },
                {
                    "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
                    "slug": "70",
                    "name": "70"
                },
                {
                    "size": "clamp(7rem, 14vw, 11rem)",
                    "slug": "80",
                    "name": "80"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "200",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-ultralight.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-light.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-regular.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-medium.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "600",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-semibold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-bold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "800",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/gilroy-extrabold.ttf"
                            ]
                        },
                        {
                            "fontFamily": "Gilroy",
                            "fontWeight": "900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Gilroy-Heavy.ttf"
                            ]
                        }
                    ],
                    "name": "Primary (Gilroy)",
                    "slug": "primary",
                    "fontFamily": "Gilroy, Arial, sans-serif"
                }
            ],
            "defaultFontSizes": false,
            "fontSizes": [
                {
                    "size": "1rem",
                    "slug": "small",
                    "name": "S",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    }
                },
                {
                    "size": "1.125rem",
                    "slug": "medium",
                    "name": "M",
                    "fluid": {
                        "min": "1.0625rem",
                        "max": "1.25rem"
                    }
                },
                {
                    "size": "1.375rem",
                    "slug": "large",
                    "name": "L",
                    "fluid": {
                        "min": "1.125rem",
                        "max": "1.375rem"
                    }
                },
                {
                    "size": "1.875rem",
                    "slug": "x-large",
                    "name": "XL",
                    "fluid": {
                        "min": "1.875rem",
                        "max": "2.25rem"
                    }
                },
                {
                    "size": "3rem",
                    "slug": "xx-large",
                    "name": "2XL",
                    "fluid": {
                        "min": "3rem",
                        "max": "4.5rem"
                    }
                }
            ],
            "fontWeight": true,
            "fontStyle": true,
            "letterSpacing": false,
            "textTransform": true,
            "textDecoration": false,
            "dropCap": false
        },
        "custom": {
            "header": {
                "height": "5rem"
            },
            "base": {
                "border-radius": "8px"
            },
            "main": {
                "spacing": {
                    "top": "var(--wp--preset--spacing--40)",
                    "bottom": "var(--wp--preset--spacing--40)"
                },
                "blockGap": "2.25rem"
            },
            "teaserblock": {
                "image-width": "100px",
                "gap": "4.5rem"
            }
        },
        "blocks": {
            "core/buttons": {
                "spacing": {
                    "blockGap": true
                }
            },
            "core/button": {
                "border": {
                    "radius": false
                }
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontWeight": "400",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.7",
            "letterSpacing": ".8px"
        },
        "spacing": {
            "padding": {
                "top": "0",
                "right": "2rem",
                "bottom": "0",
                "left": "2rem"
            },
            "blockGap": "var(--wp--custom--main--block-gap)"
        },
        "color": {
            "background": "var(--wp--preset--color--base-0)",
            "text": "var(--wp--preset--color--contrast-0)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "700",
                    "lineHeight": "1.3",
                    "letterSpacing": ".8px"
                },
                "color": {
                    "text": "var(--wp--preset--color--contrast-1)"
                },
                "css":"text-shadow: 1px 1px 50px rgba(0,0,0,.3);word-break:unset;word-spacing:.5px"
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "link": {
                "typography": {
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim-0)"
                },
                "outline": "none"
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "300",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.5",
                    "textAlign": "left"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim-0)"
                },
                "spacing": {
                    "margin": {
                        "top": "1rem",
                        "bottom": "0",
                        "left": "auto",
                        "right": "auto"
                    }
                },
                "css":"width: 100%;max-width: var(--wp--style--global--content-size);"
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "400",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.2",
                    "letterSpacing": ".4px",
                    "textDecoration": "none",
                    "textTransform": "uppercase"
                },
                "color": {
                    "text": "var(--wp--preset--color--contrast-1)",
                    "background": "var(--wp--preset--color--denim-0)"
                },
                "border": {
                    "color": "transparent",
                    "radius": "5px",
                    "width": "1px",
                    "style": "solid"
                },
                "dimensions": {
                    "minHeight": "auto"
                },
                "spacing": {
                    "padding": {
                        "top": ".85rem",
                        "right": "2rem",
                        "bottom": ".85rem",
                        "left": "2rem"
                    },
                    "margin": "0"
                },
                "css":"cursor: pointer;"
            }
        },
        "blocks": {
            "core/paragraph": {
                "css": "word-spacing:-1px"
            },
            "core/list": {
                "css": "word-spacing:-1px"
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--50)",
                        "bottom": "var(--wp--preset--spacing--50)"
                    }
                }
            },
            "core/post-title": {
                "typography": {
                    "fontWeight": "800"
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "publication",
            "title": "Publikation",
            "postTypes": [
                "publication"
            ]
        },
        {
            "name": "portfolio",
            "title": "Portfolio",
            "postTypes": [
                "portfolio"
            ]
        },
        {
            "name": "page-no-title",
            "title": "Page No Title",
            "postTypes": [
                "page"
            ]
        }
    ]
}
