{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Base / 0",
                    "slug": "base-0",
                    "color": "#2C2E3A"
                },
                {
                    "name": "Base / 1",
                    "slug": "base-1",
                    "color": "#30333F"
                },
                {
                    "name": "Base / 2",
                    "slug": "base-2",
                    "color": "#353744"
                },
                {
                    "name": "Base / 3",
                    "slug": "base-3",
                    "color": "#393C49"
                },
                {
                    "name": "Base / 4",
                    "slug": "base-4",
                    "color": "#3D404E"
                },
                {
                    "name": "Base / 5",
                    "slug": "base-5",
                    "color": "#424553"
                },
                {
                    "name": "Denim / 0",
                    "slug": "denim-0",
                    "color": "hsl(202,82%,50%)"
                },
                {
                    "name": "Denim / 1",
                    "slug": "denim-1",
                    "color": "hsl(202,82%,22%)"
                },
                {
                    "name": "Contrast / 0",
                    "slug": "contrast-0",
                    "color": "hsl(222,7%,53%)"
                },
                {
                    "name": "Contrast / 1",
                    "slug": "contrast-1",
                    "color": "hsl(222,0%,90%)"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                }
            ],
            "gradients": [],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "1000px",
            "wideSize": "1280px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "size": "clamp(1.5rem, 5vw, 2rem)",
                    "slug": "30",
                    "name": "30"
                },
                {
                    "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
                    "slug": "40",
                    "name": "40"
                },
                {
                    "size": "clamp(2.5rem, 8vw, 4.5rem)",
                    "slug": "50",
                    "name": "50"
                },
                {
                    "size": "clamp(3.75rem, 10vw, 7rem)",
                    "slug": "60",
                    "name": "60"
                },
                {
                    "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
                    "slug": "70",
                    "name": "70"
                },
                {
                    "size": "clamp(7rem, 14vw, 11rem)",
                    "slug": "80",
                    "name": "80"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "100 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Inter-VariableFont_slnt,wght.woff2"
                            ],
                            "unicodeRange": "U+0020-007F, U+00A0-00FF, U+02B0-02FF, U+0300-036F, U+2000-206F, U+20A4, U+20AC, U+2103, U+2109, U+2122"
                        }
                    ],
                    "name": "Primary (Inter)",
                    "slug": "primary",
                    "fontFamily": "Inter, Arial, sans-serif"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "Noto Serif Display",
                            "fontWeight": "100 900",
                            "fontStyle": "italic",
                            "src": [
                                "file:./assets/fonts/NotoSerifDisplay-Italic-VariableFont_wdth,wght.woff2"
                            ]
                        }
                    ],
                    "name": "Secondary (Noto Serif Display)",
                    "slug": "secondary",
                    "fontFamily": "Noto Serif Display, serif"
                }
            ],
            "defaultFontSizes": false,
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "fluid": {
                        "min": "0.75rem",
                        "max": "0.875rem"
                    },
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1.125rem",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1.125rem"
                    },
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.375rem",
                    "fluid": {
                        "min": "1.375rem",
                        "max": "1.625rem"
                    },
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "2rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.625rem"
                    },
                    "slug": "x-large",
                    "name": "X-large"
                },
                {
                    "size": "3rem",
                    "fluid": {
                        "min": "3rem",
                        "max": "4rem"
                    },
                    "slug": "xx-large",
                    "name": "2X-Large"
                }
            ],
            "fontWeight": true,
            "fontStyle": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false,
            "dropCap": false
        },
        "custom": {
            "header": {
                "height": "clamp(5rem, calc(5rem + ((1vw - 0.48rem) * 3.8462)), 7rem)"
            },
            "base": {
                "gap": "calc(1.5 * var(--wp--custom--base--font-size))",
                "border-radius": "8px"
            },
            "main": {
                "spacing": {
                    "top": "var(--wp--preset--spacing--40)",
                    "bottom": "var(--wp--preset--spacing--40)"
                }
            },
            "teaserblock": {
                "image-width": "100px",
                "gap": "4.5rem"
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontWeight": "200",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6",
            "letterSpacing": ".5px"
        },
        "spacing": {
            "padding": {
                "top": "0",
                "right": "1rem",
                "bottom": "0",
                "left": "1rem"
            }
        },
        "color": {
            "background": "var(--wp--preset--color--base-0)",
            "text": "var(--wp--preset--color--contrast-0)"
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontSize": "var(--wp--preset--font-size--large)",
                    "fontWeight": "700",
                    "lineHeight": "1.3",
                    "letterSpacing": "1px",
                    "wordSpacing": ".5px"
                },
                "color": {
                    "text": "var(--wp--preset--color--contrast-1)"
                },
                "css":"text-shadow: 1px 1px 50px rgba(0,0,0,.3);hyphens: manual;"
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--xx-large)"
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--x-large)"
                }
            },
            "link": {
                "typography": {
                    "fontWeight": "300",
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim-0)"
                },
                "outline": "none",
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--white)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "300",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.5",
                    "letterSpacing": ".3px"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim-0)"
                },
                "spacing": {
                    "margin": {
                        "top": "1rem",
                        "bottom": "0"
                    }
                }
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "400",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.2",
                    "letterSpacing": ".4px",
                    "textTransform": "uppercase",
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim-0)",
                    "background": "transparent"
                },
                "border": {
                    "color": "var(--wp--preset--color--denim-0)",
                    "radius": "5px",
                    "width": "2px",
                    "style": "solid"
                },
                "dimensions": {
                    "minHeight": "auto"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--white)",
                        "background": "var(--wp--preset--color--denim-0)"
                    }
                }
            }
        },
        "blocks": {
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                },
                "typography": {
                    "wordSpacing": "-1px"
                },
                "css":"text-shadow: 0 1px 10px rgba(0,0,0,.5);"
            },
            "core/list": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                },
                "typography": {
                    "wordSpacing": "-1px"
                },
                "css":"text-shadow: 0 1px 10px rgba(0,0,0,.5);"
            },
            "core/post-title": {
                "spacing": {
                    "margin": {
                        "top": "var(--wp--preset--spacing--40)",
                        "bottom": "var(--wp--preset--spacing--70)"
                    }
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "publication",
            "title": "Publikation",
            "postTypes": [
                "publication"
            ]
        }
    ]
}
