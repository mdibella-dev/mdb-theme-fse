{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Darkness",
                    "slug": "darkness",
                    "color": "hsl(228,21.7%,9%)"
                },
                {
                    "name": "Denim",
                    "slug": "denim",
                    "color": "hsl(202,82%,50%)"
                },
                {
                    "name": "Denim Dark",
                    "slug": "denim-dark",
                    "color": "hsl(202,82%,22%)"
                },
                {
                    "name": "Concrete",
                    "slug": "concrete",
                    "color": "hsl(222,7%,53%)"
                },
                {
                    "name": "Stone",
                    "slug": "stone",
                    "color": "hsl(222,7%,75%)"
                },
                {
                    "name": "Gypsum",
                    "slug": "gypsum",
                    "color": "hsl(222,0%,90%)"
                }
            ],
            "gradients": [
                {
                    "name": "Linear from darkness to transparent, starting at top",
                    "slug": "linear-darkness",
                    "gradient": "linear-gradient(to bottom, var(--wp--preset--color--darkness) 20%, transparent 50%)"
                }
            ],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "layout": {
            "contentSize": "960px",
            "wideSize": "1280px"
        },
        "spacing": {
            "margin": true,
            "padding": false,
            "spacingScale": {
                "steps": 0
            },
            "spacingSizes": [
                {
                    "size": "clamp(1.5rem, 5vw, 2rem)",
                    "slug": "30",
                    "name": "30"
                },
                {
                    "size": "clamp(1.8rem, 1.8rem + ((1vw - 0.48rem) * 2.885), 3rem)",
                    "slug": "40",
                    "name": "40"
                },
                {
                    "size": "clamp(2.5rem, 8vw, 4.5rem)",
                    "slug": "50",
                    "name": "50"
                },
                {
                    "size": "clamp(3.75rem, 10vw, 7rem)",
                    "slug": "60",
                    "name": "60"
                },
                {
                    "size": "clamp(5rem, 5.25rem + ((1vw - 0.48rem) * 9.096), 8rem)",
                    "slug": "70",
                    "name": "70"
                },
                {
                    "size": "clamp(7rem, 14vw, 11rem)",
                    "slug": "80",
                    "name": "80"
                }
            ]
        },
        "useRootPaddingAwareAlignments": true,
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "100 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/Inter-VariableFont_slnt,wght.woff2"
                            ]
                        }
                    ],
                    "name": "Inter",
                    "slug": "primary",
                    "fontFamily": "Inter, Arial, sans-serif"
                },
                {
                    "fontFace": [
                        {
                            "fontFamily": "Roboto Slab",
                            "fontWeight": "100 900",
                            "fontStyle": "normal",
                            "src": [
                                "file:./assets/fonts/RobotoSlab-VariableFont_wght.woff2"
                            ]
                        }
                    ],
                    "name": "Roboto Slab",
                    "slug": "secondary",
                    "fontFamily": "Roboto Slab, Georgia, serif"
                }
            ],
            "fontSizes": [
                {
                    "size": "0.875rem",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "slug": "small",
                    "name": "Small"
                },
                {
                    "size": "1rem",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.25rem"
                    },
                    "slug": "medium",
                    "name": "Medium"
                },
                {
                    "size": "1.375rem",
                    "fluid": {
                        "min": "1.375rem",
                        "max": "1.625rem"
                    },
                    "slug": "large",
                    "name": "Large"
                },
                {
                    "size": "2rem",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.625rem"
                    },
                    "slug": "x-large",
                    "name": "X-large"
                },
                {
                    "size": "3rem",
                    "fluid": {
                        "min": "3rem",
                        "max": "4rem"
                    },
                    "slug": "xx-large",
                    "name": "2X-Large"
                }
            ],
            "fontWeight": false,
            "fontStyle": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false,
            "dropCap": false
        },
        "custom": {
            "navbar": {
                "column-width": "9rem",
                "row-height": "5rem"
            },
            "base": {
                "font-size": "clamp(1rem, calc(1rem + ((1vw - 0.3rem) * 0.5)), 1.25rem)",
                "gap": "calc(1.5 * var(--wp--custom--base--font-size))",
                "border-radius": "8px"
            },
            "teaserblock": {
                "image-width": "100px"
            }
        },
        "blocks": {
            "core/paragraph" : {
                "color": {
                    "custom": false,
                    "background": false
                }
            },
            "core/list" : {
                "color": {
                    "custom": false,
                    "background": false
                }
            },
            "core/heading": {
                "color": {
                    "custom": false,
                    "background": false
                }
            },
            "core/post-title": {
                "color": {
                    "custom": false,
                    "background": false,
                    "customGradient": false,
                    "gradients": [],
                    "defaultGradients": false
                }
            }
        }
    },
    "styles": {
        "spacing": {
            "padding": {
                "top": "var(--wp--preset--spacing--60)",
                "right": "var(--wp--preset--spacing--30)",
                "bottom": "var(--wp--preset--spacing--40)",
                "left": "var(--wp--preset--spacing--30)"
            }
        },
        "elements": {
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--secondary)",
                    "fontWeight": "600",
                    "lineHeight": "1.3",
                    "letterSpacing": "1.5px"
                },
                "color": {
                    "text": "var(--wp--preset--color--gypsum)"
                }
            },
            "link": {
                "typography": {
                    "fontWeight": "300",
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim)"
                },
                "outline": "none",
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--white)"
                    }
                }
            },
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "300",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.5",
                    "letterSpacing": ".2px"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim)"
                }
            },
            "button": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--primary)",
                    "fontWeight": "400",
                    "fontSize": "var(--wp--preset--font-size--small)",
                    "lineHeight": "1.2",
                    "letterSpacing": ".4px",
                    "textTransform": "uppercase",
                    "textDecoration": "none"
                },
                "color": {
                    "text": "var(--wp--preset--color--denim)",
                    "background": "rgba(18,20,28,.5)"
                },
                "border": {
                    "color": "var(--wp--preset--color--denim)",
                    "radius": "5px",
                    "width": "2px",
                    "style": "solid"
                },
                "dimensions": {
                    "minHeight": "auto"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--white)",
                        "background": "var(--wp--preset--color--denim)"
                    }
                }
            }
        },
        "blocks": {
            "core/post-title": {
                "typography": {
                    "fontSize": "clamp(3.375rem, 3.375rem + ((1vw - 0.48rem) * 3.846), 5.375rem)"
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            },
            "core/list": {
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "var(--wp--preset--spacing--30)"
                    }
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "single-publication",
            "title": "Single Publication",
            "postTypes": [ "publication" ]
        }
    ]
}
