{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Midnight Blue",
                    "slug": "midnightblue",
                    "color": "#252D3C"
                },
                {
                    "name": "Slate",
                    "slug": "slate",
                    "color": "#2F384C"
                },
                {
                    "name": "Denim",
                    "slug": "denim",
                    "color": "#1F7DB2"
                },
                {
                    "name": "Dusk",
                    "slug": "dusk",
                    "color": "#144F71"
                },
                {
                    "name": "Sky Blue",
                    "slug": "skyblue",
                    "color": "#29B6F6"
                },
                {
                    "name": "Sand",
                    "slug": "sand",
                    "color": "#FFCB70"
                },
                {
                    "name": "Concrete",
                    "slug": "concrete",
                    "color": "#9CA3AF"
                },
                {
                    "name": "Stone",
                    "slug": "stone",
                    "color": "#B9BDC6"
                }
            ],
            "gradients": [
                {
                    "name": "Circular from dusk to transparent, starting at bottom",
                    "slug": "circular-dusk",
                    "gradient": "radial-gradient(circle at bottom, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                },
                {
                    "name": "Circular from dusk to transparent, starting at top",
                    "slug": "circular-dusk-reverse",
                    "gradient": "radial-gradient(circle at top, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                }
            ],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Inter",
                    "slug": "inter",
                    "fontFamily": "Inter, Arial, sans-serif"
                },
                {
                    "name": "Inconsolata",
                    "slug": "inconsolata",
                    "fontFamily": "Inconsolata, Arial, sans-serif"
                }
            ],
            "fontSizes": [],
            "fontWeight": false,
            "fontStyle": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false
        },
        "custom": {
            "navbar": {
                "height": "8rem",
                "max-width": "70rem",
                "min-padding": "2rem"
            }
        },
        "blocks": {
            "core/paragraph" : {
                "color": {
                    "background": false
                },
                "typography": {
                    "dropCap": true
                }
            },
            "core/post-title": {
                "color": {
                    "custom": false,
                    "background": false,
                    "customGradient": false,
                    "gradients": [],
