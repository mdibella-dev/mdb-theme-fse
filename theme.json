{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "Black",
                    "slug": "black",
                    "color": "#000000"
                },
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Midnight Dark",
                    "slug": "midnightdark",
                    "color": "#181c22"
                },
                {
                    "name": "Midnight Blue",
                    "slug": "midnightblue",
                    "color": "#252D3C"
                },
                {
                    "name": "Slate",
                    "slug": "slate",
                    "color": "#2F384C"
                },
                {
                    "name": "Denim",
                    "slug": "denim",
                    "color": "#148ACC"
                },
                {
                    "name": "Dusk",
                    "slug": "dusk",
                    "color": "#144F71"
                },
                {
                    "name": "Sky Blue",
                    "slug": "skyblue",
                    "color": "#29B6F6"
                },
                {
                    "name": "Sand",
                    "slug": "sand",
                    "color": "#FFCB70"
                },
                {
                    "name": "Concrete",
                    "slug": "concrete",
                    "color": "#7E848E"
                },
                {
                    "name": "Stone",
                    "slug": "stone",
                    "color": "#B9BDC6"
                }
            ],
            "gradients": [
                {
                    "name": "Circular from dusk to transparent, starting at bottom",
                    "slug": "circular-dusk",
                    "gradient": "radial-gradient(circle at bottom, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                },
                {
                    "name": "Circular from dusk to transparent, starting at top",
                    "slug": "circular-dusk-reverse",
                    "gradient": "radial-gradient(circle at top, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                }
            ],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Inter",
                    "slug": "inter",
                    "fontFamily": "Inter, Arial, sans-serif"
                },
                {
                    "name": "Inconsolata",
                    "slug": "inconsolata",
                    "fontFamily": "Inconsolata, Arial, sans-serif"
                },
                {
                    "name": "Roboto Slab",
                    "slug": "roboto-slab",
                    "fontFamily": "Roboto Slab, Courier, sans-serif"
                }
            ],
            "fontSizes": [],
            "fontWeight": false,
            "fontStyle": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false
        },
        "custom": {
            "navbar": {
                "height": "5rem",
                "max-width": "70rem",
                "min-padding": "1rem"
            },
            "base": {
                "font-size": "clamp(1.125rem, 1.125rem + ((1vw - .355rem) * .5056), 1.35rem)",
                "gap": "calc(1.5 * var(--wp--custom--base--font-size))"
            },
            "content": {
                "max-width": "64rem",
                "min-padding": "2rem"
            },
            "teaserblock": {
                "image-width": "100px"
            }
        },
        "blocks": {
            "core/paragraph" : {
                "color": {
                    "background": false
                },
                "typography": {
                    "dropCap": true
                }
            },
            "core/post-title": {
                "color": {
                    "custom": false,
                    "background": false,
                    "customGradient": false,
                    "gradients": [],
                    "defaultGradients": false
                }
            },
            "core/heading": {
                "color": {
                    "background": false
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "single-publication",
            "title": "Single Publication",
            "postTypes": [ "publication" ]
        }
    ]
}
