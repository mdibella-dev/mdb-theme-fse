{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "name": "White",
                    "slug": "white",
                    "color": "#FFFFFF"
                },
                {
                    "name": "Darkness",
                    "slug": "darkness",
                    "color": "hsl(228,21.7%,9%)"
                },
                {
                    "name": "Denim",
                    "slug": "denim",
                    "color": "hsl(202,82%,50%)"
                },
                {
                    "name": "Denim Dark",
                    "slug": "denim-dark",
                    "color": "hsl(202,82%,22%)"
                },
                {
                    "name": "Concrete",
                    "slug": "concrete",
                    "color": "hsl(222,7%,53%)"
                },
                {
                    "name": "Stone",
                    "slug": "stone",
                    "color": "hsl(222,7%,75%)"
                },
                {
                    "name": "Gypsum",
                    "slug": "gypsum",
                    "color": "hsl(222,0%,90%)"
                }
            ],
            "gradients": [
                {
                    "name": "Circular from dusk to transparent, starting at bottom",
                    "slug": "circular-dusk",
                    "gradient": "radial-gradient(circle at bottom, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                },
                {
                    "name": "Circular from dusk to transparent, starting at top",
                    "slug": "circular-dusk-reverse",
                    "gradient": "radial-gradient(circle at top, var(--wp--preset--color--dusk) 10%, transparent 50%)"
                }
            ],
            "duotone": [],
            "defaultPalette" : false,
            "defaultGradients": false,
            "customGradient": false,
            "customDuotone": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "name": "Inter",
                    "slug": "inter",
                    "fontFamily": "Inter, Arial, sans-serif"
                },
                {
                    "name": "Roboto Slab",
                    "slug": "roboto-slab",
                    "fontFamily": "Roboto Slab, Georgia, serif"
                }
            ],
            "fontSizes": [],
            "fontWeight": false,
            "fontStyle": false,
            "letterSpacing": false,
            "textDecoration": false,
            "textTransform": false
        },
        "custom": {
            "navbar": {
                "height": "5rem",
                "max-width": "80rem",
                "min-padding": "1rem"
            },
            "base": {
                "font-size": "clamp(1.125rem, 1.125rem + ((1vw - .355rem) * .5056), 1.35rem)",
                "gap": "calc(1.5 * var(--wp--custom--base--font-size))",
                "border-radius": "8px"
            },
            "content": {
                "max-width": "64rem",
                "min-padding": "2rem"
            },
            "teaserblock": {
                "image-width": "100px"
            }
        },
        "blocks": {
            "core/paragraph" : {
                "color": {
                    "background": false
                },
                "typography": {
                    "dropCap": true
                }
            },
            "core/post-title": {
                "color": {
                    "custom": false,
                    "background": false,
                    "customGradient": false,
                    "gradients": [],
                    "defaultGradients": false
                }
            },
            "core/heading": {
                "color": {
                    "background": false
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "single-publication",
            "title": "Single Publication",
            "postTypes": [ "publication" ]
        }
    ]
}
