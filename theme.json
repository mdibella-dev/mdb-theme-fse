                },
                "typography": {
                    "fontSizes": [
                        {
                            "name": "S",
                            "slug": "small",
                            "size": "clamp(1.375rem, 1vw + 1rem, 1.563rem);"
                        },
                        {
                            "name": "M",
                            "slug": "medium",
                            "size": "clamp(1.625rem, 2vw + 1rem, 2.125rem)"
                        },
                        {
                            "name": "L",
                            "slug": "large",
                            "size": "clamp(2rem, 3vw + 1rem, 3rem)"
                        },
                        {
                            "name": "XL",
                            "slug": "x-large",
                            "size": "clamp(3rem, 4vw + 1rem, 4rem)"
                        }
                    ]
                }
            },
            "core/heading": {
                "color": {
                    "background": false
                },
                "typography": {
                    "fontSizes": [
                        {
                            "name": "S",
                            "slug": "small",
                            "size": "clamp(1.375rem, 1vw + 1rem, 1.563rem);"
                        },
                        {
                            "name": "M",
                            "slug": "medium",
                            "size": "clamp(1.625rem, 2vw + 1rem, 2.125rem)"
                        },
                        {
                            "name": "L",
                            "slug": "large",
                            "size": "clamp(2rem, 3vw + 1rem, 3rem)"
                        },
                        {
                            "name": "XL",
                            "slug": "x-large",
                            "size": "clamp(3rem, 4vw + 1rem, 4rem)"
                        }
                    ]
                }
            }
        }
    },
    "customTemplates": [
        {
            "name": "single-publication",
            "title": "Single Publication",
            "postTypes": [ "publication" ]
        }
    ]

}
